MDScreen:
    name: "splash"
    MDFloatLayout:
        md_bg_clolor: 1, 1, 1, 1
        Image:
            source: "img.jpg"
        MDLabel:
            text: "Lake-Shore Resort"
            font_name: "Roboto"
            font_size: "35sp"
            pos_hint: {"center_x": .5, "center_y": .58}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 53/255, 56/255, 60/255, 1
        MDLabel:
            text: "We will reach you wherever you're, 24/7"
            size_hint_x: 0.9
            font_name: "Roboto"
            font_size: "18sp"
            pos_hint: {"center_x": .5, "center_y": .50}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 53/255, 56/255, 60/255, 1
        MDLabel:
            text: "You can accept"
            font_name: "Roboto"
            font_size: "18sp"
            pos_hint: {"center_x": .5, "center_y": .45}
            halign: "center"
            underline: "True"
            theme_text_color: "Custom"
            text_color: 1/255, 56/255, 60/255, 1
        MDFloatLayout:
            size_hint: .85, .08
            pos_hint: {"center_x": .5, "center_y": .22}
            canvas:
                Color:
                    rgb: (238/255, 238/255, 238/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos 
                    radius: [22, 22, 22, 22]
            TextInput:
                hint_text: "Chat-bot"
                size_hint: 1, None
                pos_hint: {"center_x": .5, "center_y": .5}
                font_size: "18sp"
                height: self.minimum_height
                cursor_color: 1, 170/255, 23/255, 1
                cursor_width: "2sp"
                foreground_color: 1, 170/255, 23/255, 1
                background_color: 0,0,0,0
                padding: 15
                font_name: "Roboto"
        MDFloatLayout:
            size_hint: .45, .08
            pos_hint: {"center_x": .5, "center_y": .1}
            canvas:
                Color:
                    rgb: (1, 170/255, 23/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos 
                    radius: [22, 22, 22, 22]
        Button:
            text: ""        
            size_hint: 1, None
            pos_hint: {"center_x": .5, "center_y": .5}
            background_color: 0,0,0,0
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "bot"
        MDLabel:
            text: "Lets go"
            font_name: "Roboto"
            font_size: "18sp"
            pos_hint: {"center_y": .1}
            halign: "center"
            color: 1, 1, 1, 1